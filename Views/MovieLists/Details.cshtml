@model MVC.Models.MovieListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>@Model.List.Name</h4>
    <hr />
    <p>
        @Html.ActionLink("Add Movies", "Add", "MovieLists", new { ID = @Model.List.ID }, null)
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(dummy => Model.Movies[0].TMDB_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(dummy => Model.Movies[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(dummy => Model.Movies[0].Year)
                </th>
                <th>
                    @Html.DisplayNameFor(dummy => Model.Movies[0].Poster)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies.ToList())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TMDB_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Poster)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.List.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
